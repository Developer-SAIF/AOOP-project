<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainVBox" alignment="CENTER" spacing="10.0" stylesheets="@../css/Login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoopproject.controllers.DeleteUserController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <TextField fx:id="userIdField" promptText="User ID" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button fx:id="deleteButton" onAction="#handleDeleteButtonAction" layoutX="30.0" layoutY="154.0" text="Delete user" />
    <Button fx:id="backButton" text="Back" onAction="#handleBackButtonAction" />
    <Label fx:id="statusLabel" styleClass="hidden" text="Status" />
</VBox>
